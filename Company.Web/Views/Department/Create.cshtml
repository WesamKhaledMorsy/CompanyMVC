@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>

<div class="row">
    <div class="col=6">
        <form asp-action="Create" asp-controller="Department">
            <div class="col-12">
                <label for="deptCode" class="col-form-label">Department Code :</label>
                <input asp-for="@Model.Code" type="text"
                       class="form-control" id="deptCode" />
                <span asp-validation-for="@Model.Code" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label for="deptName" class="col-form-label">Department Name :</label>
                <input type="text" asp-for="@Model.Name" class="form-control" id="deptName"
                       placeholder="department name" />
                <span asp-validation-for="@Model.Name" class="text-danger "> </span>
            </div>
            <div class="col-12 d-flex justify-content-between align-items-lg-center">
                @* <button type="submit" class="btn btn-primary mb-3">Add</button> *@
                <input type="submit" class="btn btn-primary my-3" value="Add" />

                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
            <div>
                @Html.ValidationSummary(true,"","Error While Adding Department");
            </div>
        </form>
    </div>
  
</div>

  @section Scripts{
      <partial name="_ValidationScriptsPartial" />
  }