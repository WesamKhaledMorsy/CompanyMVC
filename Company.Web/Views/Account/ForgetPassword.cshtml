@model ForgetPasswordModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}




<div class="col-md-6 contents">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="mb-4">
                <h3> <strong>Forget Password </strong></h3>

            </div>

            <form asp-action="ForgetPassword" asp-controller="Account">
                <div class="form-group first">
                    <label asp-for="Email">Email</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="my-2 fs-6 text-danger"></span>
                </div>
                            

                <input type="submit" value="Reset Password" class="btn text-white btn-block btn-primary">
             
            </form>
        </div>
    </div>

</div>



