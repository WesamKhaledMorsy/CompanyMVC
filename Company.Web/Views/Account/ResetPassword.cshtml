@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="col-md-6 contents">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="mb-4">
                <h3> <strong>ResetPassword </strong></h3>

            </div>

            <form asp-action="ResetPassword" asp-controller="Account">
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Token" />

                <div class="form-group  mb-4">
                    <label asp-for="Password">Password</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="my-2 fs-6 text-danger"></span>
                </div>
                <div class="form-group  mb-4">
                    <label asp-for="ConfirmPassword">ConfirmPassword</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="my-2 fs-6 text-danger"></span>
                </div>

                <input type="submit" value="Reset Password" class="btn text-white btn-block btn-primary">
         
            </form>
        </div>
    </div>

</div>

