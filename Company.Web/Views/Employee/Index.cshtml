@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}


@if (Model.Count() > 0 )
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Id)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Address)</th>
                <th>@Html.DisplayNameFor(d => d.Age)</th>
                <th>@Html.DisplayNameFor(d => d.Email)</th>
                <th>@Html.DisplayNameFor(d => d.Department.Name)</th>
                <th>@Html.DisplayNameFor(d => d.CreatedAt)</th>
                <th>@Html.DisplayNameFor(d => d.UpdatedAt)</th>
                <th>Details</th>
                <th>Update </th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <th>@employee.Id</th>
                    <td>@employee.Name</td>
                    <td>@employee.Address</td>
                    <td>@employee.Age</td>
                    <td>@employee.Email</td>
                    <td>@employee.Department.Name</td>
                    <td>@employee.CreatedAt</td>
                    <td>@employee.UpdatedAt</td>
                    <td><button type="button" class="btn btn-outline-info"><i class="fa-solid fa-file-lines"></i></button></td>
                    <td><button type="button" class="btn btn-outline-success"><i class="fa-solid fa-plus"></i></button></td>
                    <td><button type="button" class="btn btn-outline-danger"><i class="fa-solid fa-circle-xmark"></i></button></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <div class="alert alert-warning" role="alert">
        <center>
            There is No Employees
        </center>
    </div>
}
