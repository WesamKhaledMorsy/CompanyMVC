@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>
    All Employees
</h1>
<div class="w-100 d-flex align-content-center justify-content-lg-end">
    <button type="button" class="btn btn-primary">
        <a asp-action="Create" class="text-light text-decoration-none">Create Employee</a>
    </button>
</div>
<br />
@if (Model.Count() > 0 )
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Id)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Address)</th>
                <th>@Html.DisplayNameFor(d => d.Age)</th>
                <th>@Html.DisplayNameFor(d => d.Email)</th>
                <th>@Html.DisplayNameFor(d => d.Department.Name)</th>
                <th>@Html.DisplayNameFor(d => d.CreatedAt)</th>
                <th>@Html.DisplayNameFor(d => d.UpdatedAt)</th>
                <th>Details</th>
                <th>Update </th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <th>@employee.Id</th>
                    <td>@employee.Name</td>
                    <td>@employee.Address</td>
                    <td>@employee.Age</td>
                    <td>@employee.Email</td>
                    <td>@employee.Department?.Name</td>
                    <td>@employee.CreatedAt</td>
                    <td>@employee.UpdatedAt</td>
                    <td>
                        <button type="button" class="btn btn-outline-info">
                            <a asp-action="Details" asp-route-id="@employee.Id">
                                <i class="fa-solid fa-file-lines"></i> 
                            </a>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-success">
                            <a asp-action="Update" asp-route-id="@employee.Id">
                                <i class="fa-solid fa-edit"></i>
                            </a>
                           
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-danger">
                            <a asp-action="Delete" asp-route-id="@employee.Id">
                                <i class="fa-solid fa-circle-xmark"></i>
                            </a>                         
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <div class="alert alert-warning" role="alert">
        <center>
            There is No Employees
        </center>
    </div>
}
