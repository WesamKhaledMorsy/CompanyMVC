@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewBag.RoleId;
}


<h1>Add Or Remove Users</h1>

    <form asp-action="AddOrRemoveUsers" asp-route-roleid="@RoleId" class="my-2">
    <div class="row">
        <div class="col-6">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @ViewBag.rolename
                </button>
            <ul class ="dropdown-menu" aria-labelledby="dropdownMenuButton">
    
                 @for (var i = 0; i < Model.Count(); i++)
                {
                    <li class="p-2">
                        <div class="form-check">
                        <input class="form-check-input" asp-for="@Model[i].IsSelected" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                    </div>
                    </li>
                    <li><hr class="dropdown-divider" /></li>
                }
            </ul>
        </div>        
    </div>
        <div class="my-3">
            <input type="submit" value="Update" class="btn btn-success" />
            <a asp-action="Update" asp-controller="Roles" asp-route-roleid="@RoleId" class="btn btn-outline-danger">Cancel </a>
        </div>
    </form>



@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}